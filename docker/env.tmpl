# set true if running inside Docker container
IS_DOCKER=true

# set true if running as a Demo
DEMO=true
NODE_ENV=development
LOGGER_LEVEL=debug

#Installation 1.standalone 2.with-doris
INSTALLATION_MODE=standalone

ALLOW_SUPER_ADMIN_ROLE=true

WEBAPP_PORT=80
API_PORT=3000
# set to Metad API base URL
API_BASE_URL=http://localhost:3000

# set to Metad UI base URL
CLIENT_BASE_URL=http://localhost:80

# DB_TYPE: sqlite | postgres
DB_TYPE=postgres

# PostgreSQL Connection Parameters
DB_HOST=db
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASS=<Postgres Password>

SESSION_SECRET=<Session Secret>
JWT_SECRET=<JWT Secret>
JWT_REFRESH_SECRET=<JWT Refresh Secret>
jwtExpiresIn=1h
jwtRefreshExpiresIn=7d

REDIS_PASSWORD=<Redis Password>
REDIS_HOST=redis
REDIS_PORT=6379

OLAP_HOST=olap
OLAP_PORT=8080

# Doris
DORIS_USER=root
DORIS_PASS=root
DORIS_DATABASE=demo

# Starrocks
STARROCKS_HOST=
STARROCKS_PORT=9030
STARROCKS_USER=
STARROCKS_PASS=

# File System
FILE_PROVIDER=local

# AWS Config
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# SMTP Mail Config

# Sentry Client Key
SENTRY_DSN=

# Default Currency
DEFAULT_CURRENCY=CNY

# Default Country
DEFAULT_COUNTRY=CN

# Default Latitude and Longitude
DEFAULT_LATITUDE=
DEFAULT_LONGITUDE=

# PM2 Config
PM2_APP_NAME=Pangolin
PM2_API_NAME=PangolinApi
WEB_CONCURRENCY=1
WEB_MEMORY=4096

