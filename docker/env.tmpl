# set true if running inside Docker container
IS_DOCKER=true

# set true if running as a Demo System
DEMO=false
NODE_ENV=production
LOGGER_LEVEL=debug

#Installation 1.standalone 2.with-doris 3.with-starrocks
INSTALLATION_MODE=standalone

ALLOW_SUPER_ADMIN_ROLE=true

WEBAPP_PORT=80
API_PORT=3000
# set to Metad API base URL
API_BASE_URL=//localhost:3000

# DB_TYPE: sqlite | postgres
DB_TYPE=postgres

# PostgreSQL Connection Parameters
DB_HOST=db
DB_PORT=5432
DB_NAME=ocap
DB_USER=postgres
DB_PASS=<Postgres_Password>

SESSION_SECRET=<Session_Secret>
JWT_SECRET=<JWT_Secret>
JWT_REFRESH_SECRET=<JWT_Refresh_Secret>
jwtExpiresIn=1h
jwtRefreshExpiresIn=7d

REDIS_PASSWORD=<Redis_Password>
REDIS_HOST=redis
REDIS_PORT=6379

OLAP_HOST=olap
OLAP_PORT=8080

# Doris
DORIS_USER=root
DORIS_PASS=root
DORIS_DATABASE=demo

# Starrocks
